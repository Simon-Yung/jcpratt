<!doctype html>
<html style="scroll-behavior: smooth;">
    <head>
        <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet"> 
        <link rel="stylesheet" href="/includes/assets/css/styles.css">
        {% include "components/metadata.njk" %}
    </head>
    <body class="gallery_page">
        {% include "components/header.njk" %}
        <div class="gallery_intro">
            {{ content | safe }}
        </div>

        <div class="gallery">
            {%- set totalNumberOfImages = ( products.urbain | length ) + ( collections.urbain | length ) %}
            {%- set offset = products.urbain | length %}
        {%- for product in products.urbain %}
            <!--<div class="image_container">
                <img src="{{product.image}}" pagination="{{loop.index}}/{{totalNumberOfImages}}" purchase_link="{{product.link}}">
            </div>-->
        {%- endfor %}
        {%- for image in collections.urbain %}
                <img src="/{{image}}" pagination="{{loop.index + offset}}/{{totalNumberOfImages}}">
        {%- endfor %}
        </div>
        {% include "components/footer.njk" %}
    </body>
</html>